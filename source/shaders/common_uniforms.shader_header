#ifndef COMMON_UNIFORMS
#define COMMON_UNIFORMS

uniform Camera {
    vec3 position;

    mat3x4 view_matrix;
    mat3x4 inv_view_matrix;

    mat4x4 proj_matrix;
    mat4x4 inv_proj_matrix;

    mat4x4 view_proj_matrix;
    mat4x4 inv_view_proj_matrix;
} g_camera;

uniform PerFrame {
    uint  frame;
    float time;
    float dtime;
} g_per_frame;

#endif
